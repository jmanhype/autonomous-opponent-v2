name: Claude Code Validator

on:
  issue_comment:
    types: [created]
  pull_request_review_comment:
    types: [created]

permissions:
  contents: write
  pull-requests: write
  issues: write

jobs:
  validate-code:
    if: |
      contains(github.event.comment.body, '@claude-validate') &&
      (github.event.issue.pull_request || github.event.pull_request)
    runs-on: ubuntu-latest
    
    steps:
    - name: Get PR branch
      id: pr
      uses: actions/github-script@v7
      with:
        script: |
          const pr_number = context.issue.number || context.payload.pull_request.number;
          const pr = await github.rest.pulls.get({
            owner: context.repo.owner,
            repo: context.repo.repo,
            pull_number: pr_number
          });
          core.setOutput('branch', pr.data.head.ref);
          core.setOutput('number', pr_number);
    
    - uses: actions/checkout@v4
      with:
        ref: ${{ steps.pr.outputs.branch }}
    
    - name: Set up Elixir
      uses: erlef/setup-beam@v1
      with:
        elixir-version: '1.14'
        otp-version: '25'
    
    - name: Install dependencies
      run: |
        mix deps.get
        mix deps.compile
    
    - name: Run validation commands
      id: validate
      run: |
        echo "## Validation Results" > validation_results.md
        echo "" >> validation_results.md
        
        # Run mix format check
        echo "### Mix Format" >> validation_results.md
        if mix format --check-formatted; then
          echo "âœ… All files properly formatted" >> validation_results.md
        else
          echo "âŒ Formatting issues found. Run \`mix format\`" >> validation_results.md
          mix format --dry-run --check-formatted >> validation_results.md 2>&1 || true
        fi
        echo "" >> validation_results.md
        
        # Run credo
        echo "### Credo Analysis" >> validation_results.md
        if mix credo --strict; then
          echo "âœ… No Credo issues" >> validation_results.md
        else
          echo "âŒ Credo issues found:" >> validation_results.md
          mix credo list --strict >> validation_results.md 2>&1 || true
        fi
        echo "" >> validation_results.md
        
        # Run tests
        echo "### Tests" >> validation_results.md
        if mix test; then
          echo "âœ… All tests passing" >> validation_results.md
        else
          echo "âŒ Test failures:" >> validation_results.md
          mix test >> validation_results.md 2>&1 || true
        fi
    
    - name: Post results
      uses: actions/github-script@v7
      with:
        script: |
          const fs = require('fs');
          const results = fs.readFileSync('validation_results.md', 'utf8');
          
          await github.rest.issues.createComment({
            owner: context.repo.owner,
            repo: context.repo.repo,
            issue_number: ${{ steps.pr.outputs.number }},
            body: `ğŸ¼ **Maestro's Validation Report** ğŸ¼\n\n${results}\n\n@claude Please review these results and fix any issues found.`
          });